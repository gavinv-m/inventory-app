<!-- Rendered by add-movie.js -->
<%- include('./layout.ejs') %>
<link rel="stylesheet" href="../public/styles/movie-search.css" />
<script src="../public/js/movie-search.js" type="module" defer></script>
<section class="form-content">
  <form action="/add-movie" method="POST">
    <select
      name="select-collection"
      id="select-collection"
      aria-label="Select collection"
      required
      aria-required="true"
    >
      <option value="" disabled selected>Select collection</option>
      <% collections.forEach((collection) => { %>
      <option value="<%= collection.name %>"><%= collection.name %></option>
      <% }) %>
    </select>
    <input
      type="text"
      name="movie"
      placeholder="Enter movie title"
      id="movie-search"
      aria-label="Enter movie title"
      required
    />
    <!-- Will be used to store the database id -->
    <!-- Issue where value and textcontent cannot be different -->
    <input type="hidden" name="database-id" id="database-id" />
    <div id="movie-dropdown-container"></div>
    <button type="submit" aria-label="Add movie" disabled>Add Movie</button>
  </form>
</section>
