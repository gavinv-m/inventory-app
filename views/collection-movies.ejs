<!-- Rendered by collections-controller renderCollection -->
<link rel="stylesheet" href="../public/styles/collection-movies.css" />
<%- include('./layout.ejs') %>
<section class="collection-info">
  <h1><%= name %></h1>
  <% if (description) { %>
  <p><%= description %></p>
  <% } %>
</section>
<section class="collection-movies">
  <div class="movie-total">
    <span><%= movies.length %> Results</span>
  </div>
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Spine #</th>
          <th>Title</th>
          <th class="head-rating">Rating</th>
          <th class="head-country">Country</th>
          <th>Year</th>
        </tr>
      </thead>
      <tbody>
        <% movies.forEach((movie) => { %>
        <tr>
          <td><%= movie.database_id %></td>
          <td class="title-and-poster">
            <img
              src="<%= movie.poster_url %>"
              alt="Movie poster"
              height="75"
              width="75"
            />
            <span><%= movie.title %></span>
          </td>
          <td class="movie-rating"><%= movie.rating %></td>
          <td class="movie-country"><%= movie.country %></td>
          <td class="movie-year"><%= movie.year %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</section>
